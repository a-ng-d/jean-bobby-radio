//- Player main page

extends _init.pug

block content
	
	#main
		
		include ../assets/images/mono-sheet.svg
		include _components.pug

		#jumbotron
			include _header.pug
			.play
				include _play-btn.pug
				include _track.pug
				.play__animation.play__animation--start

		#player
			audio.player
			.more-options
				+infos-card('#info', '#chevron-down')(class='details')
					include _details.pug
				+infos-card('#bullhorn', '#chevron-down')(class='feedback')
	
	script(
		src='jbradio.min.js'
		type='text/javascript'
	)
